{
  "name": "ramcacher",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "mounts": [
    "source=${localEnv:HOME},target=${localEnv:HOME},type=bind,consistency=cached,readonly"
  ],
  "remoteEnv": {
    "SSH_AUTH_SOCK": "/ssh-agent"
  },
  "runArgs": [
    "--network=host"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "mathematic.vscode-pdf",
        "reditorsupport.r",
        "rdebugger.r-debugger",
        "mechatroner.rainbow-csv"
      ]
    }
  }
}